<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <table>
    <tr>
      <td width="100px"><%= f.label :first_name, "PrÃ©nom" %></td>
      <td><%= f.text_field :first_name %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label :last_name, "Nom" %></td>
      <td><%= f.text_field :last_name %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.email_field :email %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label :telephone %></td>
      <td><%= f.telephone_field :telephone %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password %></td>
      <td><% if @user.persisted? %>Laissez ce champ vide si vous ne souhaitez pas changer de mot de passe<%end%></td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation %></td>
      <td><%= f.password_field :password_confirmation %></td>
      <td></td>
    </tr>
    <% if @user.persisted? %>
    <tr>
      <td><%= f.label :current_password %></td>
      <td><%= f.password_field :current_password %></td>
      <td></td>
    </tr>
    <% end %>
    <tr>
      <td></td>
      <td><%= f.submit "Sign up" %></td>
      <td></td>
    </tr>
  </table>
<% end %>
